
{{#if success_msg}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    {{success_msg}}
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}

{{#if error_msg}}
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{error_msg}}
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}
<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header text-center">
      <h3>Edit Game</h3>
    </div>
    <div class="card-body">
      <form action="/app/app/games/games/edit-game/{{gamesi._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT" />
        <div class="mb-3">
          <label for="title">Title:</label>
          <input
            type="text"
            name="title"
            class="form-control"
            value="{{gamesi.title}}"
          />
        </div>
        <div class="mb-3">
          <label for="description">Description:</label>
          <textarea
            name="description"
            class="form-control"
          >{{gamesi.description}}</textarea>
        </div>
        <div class="mb-3">
          <label for="type">Type:</label>
          <input
            type="text"
            name="type"
            class="form-control"
            value="{{gamesi.type}}"
            placeholder="{{gamesi.type}}"
          />
        </div>
        <div class="mb-3">
          <label for="price">Price:</label>
          <input
            type="text"
            name="price"
            class="form-control"
            value="{{gamesi.price}}"
            {placeholder="{{gamesi.price}}"}
          />
        </div>
        <button class="btn btn-primary w-100" type="submit">
          Save
        </button>
      </form>
    </div>
  </div>
</div>